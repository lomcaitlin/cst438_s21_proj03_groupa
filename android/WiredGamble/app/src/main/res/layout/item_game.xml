<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/rlGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/login_bg">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGameImageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ivGameImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@color/black" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_toEndOf="@id/cvGameImageCard"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:alpha=".8"
            android:fontFamily="@font/aquire_bold"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            tools:text="Game Name" />

        <TextView
            android:id="@+id/tvPayouts"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="5dp"
            android:layout_height="40dp"
            android:layout_below="@id/tvGameName"
            android:layout_toEndOf="@id/cvGameImageCard"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:alpha=".8"
            android:fontFamily="@font/aquire_light"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            tools:text="Pays: 2x, 14x"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>